{
	"name": "wikimedia/excimer-ui-server",
	"description": "Excimer UI server",
	"license": "Apache-2.0",
	"require": {
		"php": ">=8.1",
		"ext-curl": "*",
		"ext-json": "*",
		"ext-mbstring": "*",
		"ext-pdo": "*",
		"ext-zlib": "*"
	},
	"require-dev": {
		"mediawiki/mediawiki-codesniffer": "48.0.0",
		"mediawiki/mediawiki-phan-config": "0.18.0",
		"mediawiki/minus-x": "1.1.3",
		"php-parallel-lint/php-console-highlighter": "1.0.0",
		"php-parallel-lint/php-parallel-lint": "1.4.0"
	},
	"autoload": {
		"psr-4": {
			"Wikimedia\\ExcimerUI\\Server\\": "src/"
		}
	},
	"config": {
		"allow-plugins": {
			"dealerdirect/phpcodesniffer-composer-installer": true
		}
	},
	"scripts": {
		"serve": [
			"Composer\\Config::disableProcessTimeout",
			"EXCIMER_CONFIG_PATH=../config/config.dev.json php -S 0.0.0.0:4000 -t public_html/"
		],
		"test": [
			"parallel-lint . --exclude vendor",
			"@phpcs",
			"@phan",
			"minus-x check ."
		],
		"phan": "phan --allow-polyfill-parser",
		"fix": [
			"minus-x fix .",
			"phpcbf"
		],
		"phpcs": "phpcs -sp src public_html"
	}
}
